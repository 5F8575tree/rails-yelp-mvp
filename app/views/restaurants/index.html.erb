<div class="container">
  <h1>Restaurants</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col">
        <div class="card mt-2" style="width: 18rem;">
        <img src='https://loremflickr.com/320/240/<%= restaurant.category %>food' class='img-thumbnail' alt='...'>
          <div class="card-body">
            <h5 class="card-title fs-4"><%= restaurant.name %></h5>
            <p class="card-text fs-8"><%= "#{restaurant.address}" %></p>
            <p class="card-text fs-8"><%= "Contact: #{restaurant.phone_number}" %></p>
            <p class="card-text fs-5"><%= "#{restaurant.category.capitalize} Cuisine" %></p>
            <%= link_to "View Details", restaurant_path(restaurant), class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
